{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME/.claude/hooks/ensure-local-gitignore.sh\""
          },
          {
            "type": "command",
            "command": "\"$HOME/.claude/hooks/session-secrets-scan.sh\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME/.claude/hooks/prompt-secrets-warn.sh\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME/.claude/hooks/detect-secrets.sh\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME/.claude/hooks/bash-secrets-warn.sh\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "jq -r '\"\\u001b[2m\" + .model.display_name + \"\\u001b[0m · \\u001b[36m\" + (.workspace.current_dir | split(\"/\") | last) + \"\\u001b[0m · \\u001b[32m$\" + ((.cost.total_cost_usd // 0) * 100 | floor / 100 | tostring) + \"\\u001b[0m · \\u001b[33m\" + (.context_window.used_percentage | tostring) + \"%\\u001b[0m\"'"
  },
  "enabledPlugins": {
    "claude-md-management@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": true,
    "playwright@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "playground@claude-plugins-official": false
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "outputStyle": "Explanatory",
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "eth the world",
      "follow your... heart",
      "for sale. git stash. never popped",
      "generating meaning",
      "i haven't decided if we'll have a tambourine or not",
      "i'm a guy who knows when things are things - and that's a thing",
      "i'm not mad at you i was grumpy in your direction",
      "it's just a flesh wound",
      "legend's baby!",
      "look left",
      "\"we look at the world, once, in childhood. the rest is just memory\" - louise gluck",
      "you can just do things",
      "you can just ship things",
      "you got a good one",
      "you too"
    ]
  }
}
